{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@type/*": ["type/*"],
      "@middleware/*": ["middleware/*"]
    }
  }
}
